http://www.ihjezly.com {
    redir http://ihjezly.com{uri}
}

http://ihjezly.com{
    
    encode gzip

    # Serve React/Vue/SPA frontend
    root * /usr/share/caddy
    file_server
    try_files {path} {path}/ /index.html

    # API reverse proxy (to backend http://api:5050)
    handle /api/* {
        reverse_proxy api:5050 {
            header_up Host {host}
            header_up X-Real-IP {remote}
        }
    }
}
