ihjezly.com {
    # Admin frontend on /admin/*
    handle_path /admin* {
        reverse_proxy frontend:5173
    }

    # API backend on /api/*
    handle_path /api* {
        reverse_proxy api:5050
    }

    encode gzip
}

# Optional: API subdomain
api.ihjezly.com {
    reverse_proxy api:5050
    encode gzip
}
